<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark">Alertas</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
        </ol>
      </div>
    </div>
  </div>
</div>

<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12 col-sm-6 col-md-3">
        <div class="info-box">
          <div class="info-box-content">
            <span class="info-box-text">Dentro de 7 dias:</span>
            <span class="info-box-text"><b><%= @future_appointments %></b> </span>
          </div>
        </div>
      </div>
      <div class="col-12 col-sm-6 col-md-3">
        <div class="info-box mb-3">
          <div class="info-box-content">
            <span class="info-box-text">Não concluídas:</span>
            <span class="info-box-text"><b><%= @past_appointments %></b> </span>
          </div>
        </div>
      </div>
      <div class="clearfix hidden-md-up"></div>
      <div class="col-12 col-sm-6 col-md-3">
        <div class="info-box mb-3">
          <div class="info-box-content">
            <span class="info-box-text">Não compareceram:</span>
            <span class="info-box-text"><b><%= @no_show_appointments %></b> </span>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <%= render 'alerts_card', title: 'Próximas consultas', hash: @future_appointments_hash %>
        <%= render 'alerts_card', title: 'Consultas passadas não concluídas', hash: @past_appointments_hash %>
        <%= render 'alerts_card', title: 'Consultas passadas não compareceu', hash: @no_show_appointments_hash %>
      </div>
    </div>
  </div>
</section>
