<!-- Content Header (Page header) -->
<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h3>Perfil</h3>
      </div>
    </div>
  </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-3">
        <!-- Profile avatar -->
        <div class="card card-primary card-outline">
          <div class="card-body box-profile">
            <div class="text-center">
              <%= image_tag(@pacient.avatar.url(:medium), alt: 'User profile picture', class:"profile-user-img img-fluid img-circle") if @pacient.avatar %>
            </div>
            <h3 class="profile-username text-center"><%= @pacient.first_name %> <%= @pacient.last_name %></h3>

            <p class="text-muted text-center"><%= @pacient.profession %></p>

            <ul class="list-group list-group-unbordered mb-3">
              <li class="list-group-item">
                <b>Idade: </b> <a class="float-right"><%= @pacient.age %> anos</a>
              </li>
              <li class="list-group-item">
                <b>Altura:</b> <a class="float-right">xxx</a>
              </li>
              <li class="list-group-item">
                <b>Peso Atual:</b> <a class="float-right">xxx</a>
              </li>
            </ul>
            <%= link_to 'Editar Cadastro', edit_dashboard_pacient_path(@pacient), class:'btn btn-primary btn-block' %>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->

        <!-- About Me Box -->
        <div class="card card-primary">
          <div class="card-header">
            <h3 class="card-title">Sobre <%= @pacient.first_name %></h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <strong><i class="fas fa-pencil-alt mr-1"></i> Informações</strong>

              <p class="text-muted">
                <span class="tag tag-danger">CPF: <%= @pacient.cpf %></span></br>
                <span class="tag tag-success"><%= @pacient.email %></span></br>
                <span class="tag tag-info"><%= @pacient.phone %></span>
              </p>

            <hr>
            <strong><i class="fas fa-map-marker-alt mr-1"></i> Endereço</strong>

            <p class="text-muted"><%= @pacient.city %>, <%= @pacient.state %></p>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div>
      <!-- /.col -->
      <div class="col-md-9">
        <div class="card">
          <div class="card-header p-2">
            <ul class="nav nav-pills">
              <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Geral</a></li>
              <li class="nav-item"><a class="nav-link" href="#obs" data-toggle="tab">Observações</a></li>
              <li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Consultas</a></li>
            </ul>
          </div><!-- /.card-header -->
          <div class="card-body">
            <div class="tab-content">
              <div class="active tab-pane" id="activity">
                <!-- pacient -->
                <div class="row">
                  <div class="col-md-12">
                    <div class="card">
                      <div class="card-header">
                        <h3 class="card-title">
                          <i class="fas fa-text-width"></i>
                          Description
                        </h3>
                      </div>
                      <!-- /.card-header -->
                      <div class="card-body">
                        <dl>
                          <dt>Description lists</dt>
                          <dd>A description list is perfect for defining terms.</dd>
                          <dt>Euismod</dt>
                          <dd>Vestibulum id ligula porta felis euismod semper eget lacinia odio sem nec elit.</dd>
                          <dd>Donec id elit non mi porta gravida at eget metus.</dd>
                          <dt>Malesuada porta</dt>
                          <dd>Etiam porta sem malesuada magna mollis euismod.</dd>
                        </dl>
                      </div>
                      <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                  </div>
                  <!-- ./col -->
                </div>
                <!-- /.pacient -->
              </div>
              <!-- /.tab-pane -->
              <div class="tab-pane" id="timeline">
                <!-- The timeline -->
                <div class="row">
                  <div class="col-12">
                    <div class="card">
                      <div class="card-header">
                        <h3 class="card-title">LINK PARA ADICIONAR CONSULTA</h3>

                        <div class="card-tools">
                          <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                            <div class="input-group-append">
                              <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                            </div>
                          </div>
                        </div>
                      </div>
                      <!-- /.card-header -->
                      <div class="card-body table-responsive p-0">
                        <table class="table table-hover text-nowrap">
                          <thead>
                            <tr>
                              <th>Data</th>
                              <th>Status</th>
                              <th>Ações</th>
                            </tr>
                          </thead>
                          <tbody>
                            <tr>
                              <td>11-7-2014</td>
                              <td><span class="tag tag-success">Approved</span></td>
                              <td>Ver/Editar/Duplicar/Excluir</td>
                            </tr>
                            <tr>
                              <td>11-7-2014</td>
                              <td><span class="tag tag-warning">Pending</span></td>
                              <td>Ver/Editar/Duplicar/Excluir</td>
                            </tr>
                            <tr>
                              <td>11-7-2014</td>
                              <td><span class="tag tag-primary">Approved</span></td>
                              <td>Ver/Editar/Duplicar/Excluir</td>
                            </tr>
                            <tr>
                              <td>11-7-2014</td>
                              <td><span class="tag tag-danger">Denied</span></td>
                              <td>Ver/Editar/Duplicar/Excluir</td>
                            </tr>
                          </tbody>
                        </table>
                      </div>
                      <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                  </div>
                </div>
              </div>
              <!-- /.tab-pane -->
              <div class="tab-pane" id="obs">
                <!-- The obs -->
                <div class="row">
                    <div class="col-md-12">
                      <div class="card">
                        <div class="card-header">
                          <h3 class="card-title">
                            <i class="fas fa-address-card"></i>
                            Observações
                          </h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                          <dl>
                            <dd><%= @pacient.obs %></dd>
                          </dl>
                        </div>
                        <!-- /.card-body -->
                      </div>
                      <!-- /.card -->
                    </div>
                    <!-- ./col -->
                  </div>
              </div>
              <!-- /.tab-pane -->
            </div>
            <!-- /.tab-content -->
          </div><!-- /.card-body -->
        </div>
        <!-- /.nav-tabs-custom -->
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </div><!-- /.container-fluid -->
</section>
<!-- /.content -->