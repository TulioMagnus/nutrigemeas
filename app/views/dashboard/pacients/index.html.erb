<!-- Content Header (Page header) -->
<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>Pacientes</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <%= search_form_for [:dashboard, @q], class:"input-group md-form form-sm form-1 pl-0" do |f| %>
            <%= f.search_field :first_name_cont, class:"form-control my-0 py-1",
              type:"text", placeholder:"Buscar por nome" %>
            <div class="input-group-prepend">
              <%= f.submit class:"input-group-text purple lighten-3" %>
            </div>
          <% end %>
        </ol>
      </div>
    </div>
  </div><!-- /.container-fluid -->
</section>
<section class="content">
  <!-- Default box -->
  <div class="card card-solid">
    <div class="card-body pb-0">
      <div class="row d-flex align-items-stretch">
        <% @pacients.each do |pacient| %>
          <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
            <div class="card bg-light">
              <div class="card-header text-muted border-bottom-0">
                <%= pacient.profession %>
              </div>
              <div class="card-body pt-0">
                <div class="row">
                  <div class="col-7">
                    <h2 class="lead"><b><%= pacient.full_name %></b></h2>
                    <p class="text-muted text-sm"><b>Sobre: </b> Info. </p>
                    <ul class="ml-4 mb-0 fa-ul text-muted">
                      <li class="small">
                        <span class="fa-li"><i class="fas fa-lg fa-mobile-alt"></i>
                        </span> <%= pacient.phone %>
                      </li>
                    </ul>
                  </div>
                  <div class="col-5 text-center">
                    <%= image_tag(pacient.avatar.url(:medium), alt:"",
                        class:"img-circle img-fluid") %>
                  </div>
                </div>
              </div>
              <div class="card-footer">
                <div class="text-right">
                  <%= link_to dashboard_pacient_path(pacient), class:"btn btn-sm btn-primary" do %>
                    <i class="fas fa-user"></i> Perfil
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
      <nav aria-label="Contacts Page Navigation">
        <ul class="pagination justify-content-center m-0">
          <%= paginate @pacients %>
        </ul>
      </nav>
    </div>
    <!-- /.card-footer -->
  </div>
  <!-- /.card -->
</section>