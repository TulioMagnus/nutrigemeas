<!-- Content Header (Page header) -->
<section class="content-header">
  <div class="container-fluid">
  <div class="row mb-2">
      <div class="col-sm-6">
      <h1>Pacientes</h1>
      </div>
      <div class="col-sm-6">
      <ol class="breadcrumb float-sm-right">
        <%= search_form_for [:dashboard, @q], class:"input-group md-form form-sm form-1 pl-0" do |f| %>
          <%= f.search_field :first_name_cont, class:"form-control my-0 py-1", type:"text", placeholder:"Buscar por nome" %>
          <div class="input-group-prepend">
            <%= f.submit class:"input-group-text purple lighten-3" %>
          </div>
        <% end %>
      </ol>
      </div>
  </div>
  </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <% @pacients.each do |pacient| %>
        <div class="col-md-4">
        <!-- Widget: user widget style 2 -->
          <div class="card card-widget widget-user-2">
            <!-- Add the bg color to the header using any of the bg-* classes -->
            <div class="widget-user-header bg-success">
            <div class="widget-user-image">
              <%= image_tag(pacient.avatar.url(:medium), alt:"User Avatar",
                  class:"img-circle elevation-2") %>
            </div>
            <!-- /.widget-user-image -->
            <h5 class="widget-user-username"><%= pacient.first_name %> <%= pacient.last_name %></h3>
            <h5 class="widget-user-desc">Info aqui</h5>
            </div>
            <div class="card-footer p-0">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <%= link_to dashboard_pacient_path(pacient), class:"nav-link" do %>
                    Perfil 
                    <span class="float-right badge bg-primary"><i class="fas fa-arrow-circle-right"></i></span>
                    <% end %>
                </li>
            </ul>
            </div>
          </div>
        <!-- /.widget-user -->
        <!-- /.col -->
        </div>  
      <% end %>
      <div class="text-center">
        <%= paginate @pacients %>
      </div>
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</section>
<!-- /.content -->
