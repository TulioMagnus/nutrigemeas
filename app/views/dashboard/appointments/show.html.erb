<!-- Content Header (Page header) -->
</br>
<section class="content">
  <div class="card">
    <div class="card-header">
      <h2 class="card-title">Paciente: <%= @appointment.patient.full_name %> | <%= @appointment.translated_appointment_type %>: <%=l @appointment.appointment_date, format: :default %></h2>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-2">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">Itens</h3>
              <div class="card-tools">
                <!-- <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i> -->
                </button>
              </div>
            </div>
            <div class="card-body p-0" style="display: block;">
              <ul class="nav nav-pills flex-column">
                <li class="nav-item">
                  <%= link_to root_path, class:"nav-link" do %>
                    <i class="far fa-envelope"></i> Anamnese
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to edit_dashboard_patient_appointment_skin_fold_path(@patient.id, @appointment.id), {remote: true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'}, class:"nav-link" do %>
                    <i class="far fa-envelope"></i> Dobras Cutâneas
                  <% end %>
                </li>
              </ul>
            </div>
          </div>
        </div>
        <div class="col-10 col-md-10 col-lg-10 order-2 order-md-1">
          <div class="row">
            <div class="col-12 col-sm-4">
              <div class="info-box bg-light">
                <div class="info-box-content">
                  <span class="info-box-text text-center text-muted">Idade na consulta</span>
                  <span class="info-box-number text-center text-muted mb-0"><%= @appointment.age_on_appointment %> anos</span>
                </div>
              </div>
            </div>
            <div class="col-12 col-sm-4">
              <div class="info-box bg-light">
                <div class="info-box-content">
                  <span class="info-box-text text-center text-muted">Peso atual</span>
                  <span class="info-box-number text-center text-muted mb-0">xx</span>
                </div>
              </div>
            </div>
            <div class="col-12 col-sm-4">
              <div class="info-box bg-light">
                <div class="info-box-content">
                  <span class="info-box-text text-center text-muted">Altura atual</span>
                  <span class="info-box-number text-center text-muted mb-0">cm<span>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-12">
              <h4>Resumo da Consulta?</h4>
            </div>
            <p>Aqui poderia ter gráfico da evolução</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<div id="modal-window" class="modal hide" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>
