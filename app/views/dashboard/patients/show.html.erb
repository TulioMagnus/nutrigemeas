<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-3">
        <!-- Profile avatar -->
        <div class="card card-primary card-outline">
          <div class="card-body box-profile">
            <div class="text-center">
              <%= image_tag(@patient.avatar.url(:medium), alt: 'User profile picture', class:"profile-user-img img-fluid img-circle") if @patient.avatar %>
            </div>
            <h3 class="profile-username text-center"><%= @patient.first_name %> <%= @patient.last_name %></h3>

            <p class="text-muted text-center"><%= @patient.profession %></p>
            <p class="text-muted text-center"><small><%= raw @patient.tags.map(&:name).map { |t| link_to t, tag_path(t) }.join(', ') %></small></p>

            <ul class="list-group list-group-unbordered mb-3">
              <li class="list-group-item">
                <b>Idade: </b> <a class="float-right"><%= @patient.age %> anos</a>
              </li>
              <li class="list-group-item">
                <b>Altura:</b> <a class="float-right">xxx</a>
              </li>
              <li class="list-group-item">
                <b>Peso Atual:</b> <a class="float-right">xxx</a>
              </li>
            </ul>
            <%= link_to 'Editar Cadastro', edit_dashboard_patient_path(@patient), class:'btn btn-primary btn-block' %>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div>
      <!-- /.col -->
      <div class="col-md-9">
        <div class="card">
          <div class="card-header p-2">
            <ul class="nav nav-pills">
              <li class="nav-item"><a class="nav-link active" href="#timeline" data-toggle="tab">Consultas</a></li>
              <li class="nav-item"><a class="nav-link" href="#activity" data-toggle="tab">Geral</a></li>
              <li class="nav-item"><a class="nav-link" href="#obs" data-toggle="tab">Observações</a></li>
            </ul>
          </div><!-- /.card-header -->
          <div class="card-body">
            <div class="tab-content">
              <div class="tab-pane" id="activity">
                <!-- patient -->
                <div class="row">
                  <div class="col-md-12">
                    <div class="card">
                      <div class="card-body">
                        <dl>
                          <dt>CPF</dt>
                          <dd><%= @patient.cpf %></dd>
                          <dt>Email</dt>
                          <dd><%= @patient.email %></dd>
                          <dt>Telefone</dt>
                          <dd><%= @patient.phone %></dd>
                          <dt>Endereço</dt>
                          <dd><%= @patient.street %>, <%= @patient.number %>. <%= @patient.city %>/<%= @patient.state %></dd>
                        </dl>
                      </div>
                      <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                  </div>
                  <!-- ./col -->
                </div>
                <!-- /.patient -->
              </div>
              <!-- /.tab-pane -->
              <div class="active tab-pane" id="timeline">
                <!-- The timeline -->
                <div class="row">
                  <div class="col-12">
                    <div class="card">
                      <div class="card-header">
                        <h3 class="card-title">
                          <%= link_to new_dashboard_patient_appointment_path(@patient, @appointment), class:"btn btn-success" do %>
                            <i class="fas fa-plus-circle"></i>  Nova Consulta
                          <% end %>
                        </h3>
                      </div>
                      <!-- /.card-header -->
                      <div class="card-body table-responsive p-0">
                        <table class="table table-hover text-nowrap">
                          <thead>
                            <tr>
                              <th>Data</th>
                              <th>Tipo</th>
                              <th>Preço</th>
                              <th>Pago?</th>
                              <th></th>
                            </tr>
                          </thead>
                          <tbody>
                            <% @appointments.each do |appointment| %>
                            <tr>
                              <td><%= l appointment.appointment_date, format: :default %></td>
                              <td><%= appointment.appointment_type %></td>
                              <td><%= humanized_money_with_symbol(appointment.price) %></td>
                              <td><%= humanize_boolean(appointment.payment_status) %></td>
                              <td>
                                <%= link_to edit_dashboard_patient_appointment_path(@patient, appointment),
                                    class:"btn btn-warning" do %>
                                  <i class="fas fa-edit"></i>
                                <% end %>
                                <%= link_to duplicate_dashboard_patient_appointment_path(@patient, appointment),
                                    class:"btn btn-warning" do %>
                                  <i class="fas fa-copy"></i>
                                <% end %>
                                <%= link_to dashboard_patient_appointment_path(@patient, appointment),
                                    method: :delete, data: {confirm: 'Tem certeza?'},
                                    class:"btn btn-danger" do %>
                                  <i class="fas fa-trash-alt"></i>
                                <% end %>
                              </td>
                            </tr>
                            <% end %>
                          </tbody>
                        </table>
                      </div>
                      <!-- /.card-body -->
                      <div class="card-footer">
                        <nav aria-label="Contacts Page Navigation">
                          <ul class="pagination justify-content-center m-0">
                            <%= paginate @appointments %>
                          </ul>
                        </nav>
                      </div>
                      <!-- /.card-footer -->
                    </div>
                    <!-- /.card -->
                  </div>
                </div>
              </div>
              <!-- /.tab-pane -->
              <div class="tab-pane" id="obs">
                <!-- The obs -->
                <div class="row">
                    <div class="col-md-12">
                      <div class="card">
                        <div class="card-header">
                          <h3 class="card-title">
                            <i class="fas fa-address-card"></i>
                            Observações
                          </h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                          <dl>
                            <dd><%= @patient.obs %></dd>
                          </dl>
                        </div>
                        <!-- /.card-body -->
                      </div>
                      <!-- /.card -->
                    </div>
                    <!-- ./col -->
                  </div>
              </div>
              <!-- /.tab-pane -->
            </div>
            <!-- /.tab-content -->
          </div><!-- /.card-body -->
        </div>
        <!-- /.nav-tabs-custom -->
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </div><!-- /.container-fluid -->
</section>
<!-- /.content -->